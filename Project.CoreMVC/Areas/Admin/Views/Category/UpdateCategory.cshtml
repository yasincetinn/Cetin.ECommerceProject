@model CreateCategoryRequestModel

<form asp-action="UpdateCategory" asp-controller="Category" method="post" class="p-3 w-75 m-auto">

    <input type="hidden" asp-for="ID" />

    <div class="mb-3">
        <label>Enter Category Name :</label>
        <input asp-for="CategoryName" class="form-control" placeholder="Category Name" />
    </div>

    <div class="mb-3">
        <label>Write a description :</label>
        <input asp-for="Description" class="form-control" placeholder="Description" />
    </div>

    <br />

    <div class="mb-3">
        <button class="btn btn-primary">Update Category</button>
    </div>

</form>
