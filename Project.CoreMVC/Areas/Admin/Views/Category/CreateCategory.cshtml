@model CreateCategoryRequestModel

<form asp-action="CreateCategory" asp-controller="Category" method="post" class="p-3 w-75 m-auto">

    <div class="mb-3">
        <label>
            Enter Category Name :
        </label>
        <input asp-for="CategoryName" class="form-control" placeholder="Category Name" />
    </div>
    <br />
    <div class="mb-3">
        <label>
            Write a description :
        </label>
        <input asp-for="Description" class="form-control" placeholder="Description" />
    </div>
    <br />
    <div class="mb-3">
        <button class="btn btn-primary">
            Create Category
        </button>
    </div>

</form>